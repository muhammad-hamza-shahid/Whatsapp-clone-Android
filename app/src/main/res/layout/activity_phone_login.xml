<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <EditText
        android:id="@+id/edit_phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/inputs"
        android:hint="Enter Phone number here"
        android:drawableStart="@drawable/phone"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/edit_verification_code_input"
        android:layout_below="@+id/edit_phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/inputs"
        android:hint="Enter Phone number here"
        android:drawableStart="@drawable/password"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:visibility="invisible"
        android:padding="8dp"/>
    <Button
        android:id="@+id/btn_send_verification_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Verification Code"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_below="@+id/edit_verification_code_input"
        />
    <Button
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"
        android:textSize="19sp"
        android:visibility="invisible"
        android:textStyle="bold"
        android:layout_below="@+id/btn_send_verification_code"
        />

</RelativeLayout>