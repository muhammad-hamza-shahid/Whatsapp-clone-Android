<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/login_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/login_photo"
                />
            <EditText
                android:id="@+id/edit_login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_image"
                android:hint="Email"
                android:background="@drawable/inputs"
                android:drawableStart="@drawable/email"
                android:padding="6dp"
                android:inputType="textEmailAddress"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>
            <EditText
                android:id="@+id/edit_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_login_email"
                android:hint="Password"
                android:background="@drawable/inputs"
                android:drawableStart="@drawable/password"
                android:padding="6dp"
                android:inputType="textEmailAddress"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>
            <TextView
                android:id="@+id/txt_forger_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_login_password"
                android:text="Forget Password?"
                android:textAlignment="textEnd"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:padding="6dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp"/>
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:layout_below="@+id/txt_forger_password"
                android:background="@drawable/buttons"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <TextView
            android:id="@+id/txt_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:text="Need new account?"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:padding="6dp"
            android:textStyle="bold"
            android:textSize="17sp"/>
            <TextView
                android:id="@+id/txt_or"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_signup"
                android:text="or"
                android:textAlignment="center"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textStyle="bold"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/txt_login_using_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_or"
                android:text="Login using your"
                android:textAlignment="center"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:padding="6dp"
                android:textStyle="bold"
                android:textSize="17sp"/>
            <Button
                android:id="@+id/btn_login_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone number"
                android:drawableStart="@drawable/phone"
                android:layout_below="@+id/txt_login_using_number"
                android:background="@drawable/buttons"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>